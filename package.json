{
  "name": "ark-sotf-discord-bot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "rimraf ./build && swc ./src --out-dir ./build && tsc",
    "build:dev": "swc ./src --out-dir ./build --watch",
    "start": "node build/index.js",
    "dev": "concurrently -k -n \"TypeScript,Node\" -p \"[{name}]\" -c \"blue,green\" \"npm run build:dev\" \"cross-env NODE_ENV=development nodemon build/index.js\"",
    "discord:register-commands": "node build/scripts/register-commands.js",
    "lint:editorconfig": "editorconfig-checker",
    "lint:typescript": "eslint \"**/*.{js,jsx,ts,tsx}\" --ignore-path \".gitignore\"",
    "lint:prettier": "prettier \".\" --check --ignore-path \".gitignore\""
  },
  "dependencies": {
    "axios": "1.1.3",
    "discord.js": "14.6.0",
    "dotenv": "16.0.3",
    "rcon-client": "4.2.3"
  },
  "devDependencies": {
    "@swc/cli": "0.1.57",
    "@swc/core": "1.3.18",
    "@types/node": "18.11.9",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "concurrently": "7.5.0",
    "cross-env": "7.0.3",
    "editorconfig-checker": "4.0.2",
    "eslint": "8.27.0",
    "eslint-config-conventions": "5.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-unicorn": "44.0.2",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "typescript": "4.9.3"
  }
}
